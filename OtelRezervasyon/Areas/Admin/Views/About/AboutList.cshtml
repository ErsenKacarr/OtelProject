@model List<OtelRezervasyon.EntityLayer.Concrete.About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">About Bilgi Listesi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item">
                    <div class="row align-items-center">
                         <div class="col-md-3">
                            <img src="@item.ImageUrl" class="img-fluid img-thumbnail" alt="@item.Title" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-image="@item.ImageUrl" data-bs-title="@item.Title" />
                        </div> 
                        <div class="col-md-9">
                           @*  <h5 class="mt-2">@item.ImageUrl</h5>
                            <h5 class="mt-2">@item.Title</h5> *@
                            <h5 class="mt-2">@item.Description</h5>
                            
                            <a href="@Url.Action("UpdateAbout", "About", new { area = "Admin", id = item.AboutId })" class="btn btn-sm btn-warning">Güncelle</a>
                            <a href="@Url.Action("RemoveAbout", "About", new { area = "Admin", id = item.AboutId })" class="btn btn-sm btn-danger">Sil</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Henüz Bilgi bulunmamaktadır.
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("CreateAbout", "About", new { area = "Admin" })" class="btn btn-primary">
            Yeni Bilgi Ekle
        </a>
    </div>
</div>

